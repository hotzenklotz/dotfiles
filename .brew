#!/usr/bin/env bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep

# Install other useful binaries
brew install ack
brew install git
brew install imagemagick
brew install node
brew install tree
brew install mongodb
brew install android-sdk
brew install ffmpeg
brew install sbt


# Install native apps
sudo brew tap caskroom/cask
sudo brew tap caskroom/versions
brew install brew-cask


function installcask() {
	brew cask install "${@}" 2> /dev/null
}

installcask onepassword
installcask anki
installcask appcleaner
installcask caffeine
installcask chromecast
installcask dropbox
installcask google-drive
installcask google-chrome
installcask google-chrome-canary
installcask firefox
installcask imageoptim
installcask iterm2
installcask sublime-text3
installcask the-unarchiver
installcask transmission
installcask vlc
installcask android-file-transfer
installcask skype
installcask evernote
installcask github
installcask robomongo
installcask spotify
installcask steam
installcask one-password
installcask sparrow
installcask gimp
installcask j-downloader
installcask slack
installcask cyberduck
installcask xtrafinder
installcask vyprvpn
installcask subtitles
installcask macpass
installcask daisydisk
installcask github
installcask bittorrent-sync
installcask spectacle
installcask inkscape


# Remove outdated versions from the cellar
brew cleanup
